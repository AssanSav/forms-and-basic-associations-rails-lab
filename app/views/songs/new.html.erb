<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %> 
  <br />
  <%= f.label :genre_id %> <br>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  <br /> <br>
  <%= label_tag "Content" %> <br>
  <%= f.fields_for :notes do |note_builder| %>
  <%= note_builder.text_area :content %> <br>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>


